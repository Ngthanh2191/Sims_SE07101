@model IEnumerable<WebSIMS.BDContext.Entities.Courses>
@{
    ViewData["Title"] = "Course List";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center mb-4">
        <div class="col-md-8 text-center">
            <h2>Course List</h2>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-10">
            <table class="table table-striped table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>Course Code</th>
                        <th>Course Name</th>
                        <th>Description</th>
                        <th>Credits</th>
                        <th>Department</th>
                        <th class="text-center" style="width: 180px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var course in Model)
                    {
                        <tr>
                            <td>@course.CourseCode</td>
                            <td>@course.CourseName</td>
                            <td>@course.Description</td>
                            <td>@course.Credits</td>
                            <td>@course.Department</td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@course.CourseID" class="btn btn-sm btn-warning">Edit</a>
                                    <a asp-action="Delete" asp-route-id="@course.CourseID" class="btn btn-sm btn-danger">Delete</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="row justify-content-center mt-4">
        <div class="col-md-4 text-center">
            <a asp-action="Create" class="btn btn-success px-4">Create New Course</a>
        </div>
    </div>
</div>
